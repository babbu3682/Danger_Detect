<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mainActivity"
            type="com.example.hearinghelper.MainActivity" />
    </data>

    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/divider_horizontal_darker_gray"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="8dp"
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/coc_logo"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="21sp"
                android:gravity="center"
                android:paddingLeft="65dp"
                android:text="Detection Dangerous"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_weight="4.75"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageViewWarning"
                android:src="@drawable/img_warning"
                android:scaleType="fitCenter"
                android:alpha="0.0"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewLabel"
            android:textSize="45sp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewCondition"
            android:textSize="19sp"
            android:gravity="center"
            android:text="Initializing..."
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</layout>